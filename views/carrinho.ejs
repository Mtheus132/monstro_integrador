                        <div class="resumoPedido-item">
                            <span>Entrega</span>
                            <span>a calcular</span>
                        </div>
                        <div class="resumoPedido-item-total">
                            <span>Total</span>
                            <span>R$ 175,00</span>
                        </div>
                    </div>

                </div>
                <div class="gpoints-carrinho">
                    <div class="gpoints-img">
                        <img src="images/gpoints.jpg" alt="imagem-points">
                    </div>
                    <span class="gpoints-txt">
                        Ganhe
                        <strong>175 G Pontos</strong>
                        nesta compra.
                    </span>
                </div>

                <a href="">
                    <button id="botão-carrinho-um">
                        Adicionar mais produtos
                    </button>
                </a>
                <a href="">
                    <button id="botão-ver-um">
                        Fechar pedido
                    </button>
                </a>

            </div>





        </section>





