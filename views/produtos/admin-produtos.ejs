<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>brand-admin</title>
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    
</head>

<body>
    <%- include("../partials/header") %>
    <main>        


      <table class="table" >
        <tbody>
        <tr class="table-active">
            <th>categoria</th>
            <th>ID</th>
            <th >nome</th>
            <th >descricao</th>
            <th >valor</th>
            <th>quantidade</th>
            <th >acos</th>
        </tr>
             
              
                <% if(empresa.superusuario == 1){ %>  
                  <% produto.forEach(function(produtos) { %>
                    <tr>
                      <td> <%= produtos.categoria_id %></td>
                      <td> <%= produtos.id %></td>
                      <td> <%= produtos.nome %> </td>
                      <td> <%= produtos.descricao%> </td>
                      <td> <%=  produtos.valor %> </td>
                      <td> quantidade </td>
                      <td>
                        <a href="/adminempresa/produtos/<%= produtos.id %>/editar">Editar</a>
                        <a href="/adminempresa/produtos/<%= produtos.id %>/remover">Remover</a>
                      </td>
                    </tr>
                    <% }) %>
                    <% }else{ %>
                      
                        <% produto.forEach(function(produtos) { %>
                          <% if(produtos.empresa_id == empresa.id) { %>
                        <tr>
                          <td> <%= produtos.categoria_id %></td>
                          <td> <%= produtos.id %></td>
                          <td> <%= produtos.nome %> </td>
                          <td> <%= produtos.descricao%> </td>
                          <td> <%=  produtos.valor %> </td>
                          <td> quantidade </td>
                          <td>
                            <a href="/adminempresa/produtos/<%= produtos.id %>/editar">Editar</a>
                            <a href="/adminempresa/produtos/<%= produtos.id %>/remover">Remover</a>
                          </td>
                        </tr>
                        <% }})} %> 

                    
          </div>

        </tbody>
      </table> 
          
      </section>
 
  <a href="/adminempresa/produtos/criar">Novo produto</a>
</main>
    <%- include("../partials/footer") %>
</body>

</html>